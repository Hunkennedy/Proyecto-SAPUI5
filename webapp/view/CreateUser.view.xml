<mvc:View
    controllerName="academia2022.zluuc3games.controller.CreateUser"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    >

    <Shell>
        <App>
            <pages>
                <Page >
                    <content>
                        <VBox class="sapUiSmallMargin" alignContent="Center">
                            <f:SimpleForm 
                                width="300px"
                                editable="true"
                                layout="ColumnLayout"
                                columnsM="1"
                                columnsL="1"
                                columnsXL="1">
                                <f:content>
                                    <core:Title text="Information" />
                                    
                                    <Label text="Usuario"/>
                                    <Input 
                                        required="true"
                                        value="{
                                            path : 'username',
                                            type : 'sap.ui.model.type.String'    
                                        }"/>

                                    <Label text="Mail"/>
                                    <Input 
                                        required="true"
                                        value="{
                                            path : 'mail',
                                            type : 'sap.ui.model.type.String'    
                                        }"/>
                                    
                                    <Label text="Contrasena"/>
                                    <Input 
                                        required="true"
                                        value="{
                                            path : 'password',
                                            type : 'sap.ui.model.type.String'    
                                        }"/>                                   
                                    
                                    
                                </f:content>
                            </f:SimpleForm>
                        </VBox>
                        
                    </content>
                    <footer>
                        <OverflowToolbar >
                            <ToolbarSpacer />
                            <Button text="Crear" press=".onCreateUser"/>
                            <Button text="Cancelar" press=".onNavBack"/>                            
                        </OverflowToolbar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>


</mvc:View>